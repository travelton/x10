<!DOCTYPE html>
<html>
  <head>
    <title>Control Lights!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css">

  </head>
  <body>
  <div class="container">
    <div class="starter-template">
      <h4>Lighting Control</h4>
      <div class="row">
        <div class="col-sm-2">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h5>Zone 1</h5>
            </div>
            <div class="panel-body">
              <role="form">
              <div class="form-group">
                <form action='/1/ON' method='get' id='create_bin'>
                  <button type='submit' class="btn btn-primary">Turn On</button>
                </form>
              </div>
              <div class="form-group">
                <form action='/1/OFF' method='get' id='create_bin'>
                  <button type='submit' class="btn btn-danger">Turn Off</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h5>Zone 2</h5>
            </div>
            <div class="panel-body">
              <role="form">
              <div class="form-group">
                <form action='/2/ON' method='get' id='create_bin'>
                  <button type='submit' class="btn btn-primary">Turn On</button>
                </form>
              </div>
              <div class="form-group">
                <form action='/2/OFF' method='get' id='create_bin'>
                  <button type='submit' class="btn btn-danger">Turn Off</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

    <script src="https://code.jquery.com/jquery.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>
